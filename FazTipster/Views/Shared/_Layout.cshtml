                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("AndyTipster Tips", "AndyTipsterTips", "Home")</li>
                                <li>@Html.ActionLink("Irish Racing Tips", "IrishRacingTips", "Home")</li>
                                <li>@Html.ActionLink("Ultimate Pack Tips", "UltimatePackTips", "Home")</li>
                            </ul>
                        </li>
                    }

