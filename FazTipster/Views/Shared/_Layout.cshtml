                                <li>@Html.ActionLink("Download Emails", "EmailList", "Home")</li>
                                <li>@Html.ActionLink("Edit Tips", "Edit", new { controller = "Tips", id = 1 })</li>
                                <li>@Html.ActionLink("Edit About", "Edit", new { controller = "Abouts", id = 1 })</li>

                            </ul>
                        </li>
                    }

                </ul>

                <ul class="nav navbar-nav navbar-right">
                    <li> @Html.Partial("_LoginPartial")</li>
                </ul>

