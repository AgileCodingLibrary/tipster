</head>


<body>

    <script>
        window.fbAsyncInit = function () {
            FB.init({
                appId: '910702312285636',
                xfbml: true,
                version: 'v2.5'
            });
        };

        (function (d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) { return; }
            js = d.createElement(s); js.id = id;
            js.src = "//connect.facebook.net/en_US/sdk.js";
            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));
    </script>
    <div class="boxed animated fadeIn animation-delay-5">

        <header id="header" class="hidden-xs">
            <div class="container">
                <div id="header-title">
                    <!--<h1 class="animated fadeInDown"><a href="../index.html">Andy<span>tipster</span></a></h1>-->
                    <h1 class="animated ">
                        <a href="@Url.Action("Index", "Home")">Andy<span>tipster</span></a>
                    </h1>
                    <p class="animated fadeInLeft">The Number One in Sports Tips, Make The Most out of Your Bets.</p>
                </div>
            </div> <!-- container -->
        </header> <!-- header -->

        <nav class="navbar navbar-static-top navbar-mind" role="navigation">
            <div class="container">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <a class="navbar-brand visible-xs" href="@Url.Action("Index", "Home")">Andy<span>tipster</span></a>

                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-mind-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <i class="fa fa-bars fa-inverse"></i>
                    </button>
                </div>

                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse navbar-mind-collapse" id="bs-example-navbar-collapse-1">


                    <ul class="nav navbar-nav nav-left">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("FAQ", "Faq", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                        <li><a href="">Facebook</a></li>


                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Tips<b class="caret"></b></a>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("AndyTipster Tips", "AndyTipsterTips", "Home")</li>
                                    <li>@Html.ActionLink("Irish Racing Tips", "IrishRacingTips", "Home")</li>
                                    <li>@Html.ActionLink("Ultimate Pack Tips", "UltimatePackTips", "Home")</li>
                                </ul>
                            </li>
                        }


                        @if (User.Identity.IsAuthenticated && User.IsInRole("Masteradmin"))
                        {
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Admin<b class="caret"></b></a>
                                <ul class="dropdown-menu">
                                    @*<li>@Html.ActionLink("Billing Plans", "Index", "BillingPlans")</li>
                                        <li>@Html.ActionLink("Subscriptions", "Index", "Subscription")</li>*@
                                    <li>@Html.ActionLink("Subscribers", "Index", "Subscribers")</li>


                                    <li>@Html.ActionLink("FAQ Admin", "Index", "Questions")</li>
                                    <li>@Html.ActionLink("Download Emails", "EmailList", "Home")</li>
                                    <li>@Html.ActionLink("Edit Tips", "Edit", new { controller = "Tips", id = 1 })</li>
                                    <li>@Html.ActionLink("Edit About", "Edit", new { controller = "Abouts", id = 1 })</li>

                                </ul>
                            </li>
                        }

                    </ul>

                    <ul class="nav navbar-nav navbar-right">
                        <li> @Html.Partial("_LoginPartial")</li>
                    </ul>

                </div><!-- navbar-collapse -->
            </div> <!-- container -->
        </nav> <!-- navbar navbar-default -->



        <div>


            <!-- InstanceBeginEditable name="contents" -->
            <br />
            <div class="container body-content">
                @RenderBody()
            </div>

            <footer id="footer" style="margin-top:50px;">

                <p>&copy; 2016 <a href="#">www.andytipster.com</a>, inc. All rights reserved.</p>
                <p>Designed and Maintained By <a href="http://www.agilecoding.com/">agilecoding.com: Simple but Smart</a>.</p>
            </footer>

        </div> <!-- boxed -->

    </div>
    <!-- Scripts -->
    <script src="~/Content/Template/js/jquery-1.10.2.min.js"></script>
    <script src="~/Content/Template/js/jquery.cookie.js"></script>
    <script src="~/Content/Template/js/bootstrap.min.js"></script>
    <script src="~/Content/Template/js/jquery.mixitup.min.js"></script>
    <script src="~/Content/Template/js/lightbox-2.6.min.js"></script>
    <script src="~/Content/Template/js/holder.js"></script>
    <script src="~/Content/Template/js/app.js"></script>
    <script src="~/Content/Template/js/styleswitcher.js"></script>

    <script src="~/Content/Template/js/syntax/shCore.js"></script>
    <script src="~/Content/Template/js/syntax/shBrushXml.js"></script>
    <script src="~/Content/Template/js/syntax/shBrushJScript.js"></script>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)


</body>

</html>





























