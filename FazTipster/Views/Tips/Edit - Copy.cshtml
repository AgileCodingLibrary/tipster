@model FazTipster.Entities.Tips

@{
    ViewBag.Title = "Edit";
}

<div class="col-xs-12">
    <p class="lead lead-lg text-center animated bounceInLeft animation-delay-12"><strong>You are editing contents of TIPS page. Your changes will only be saved, when you click <strong>save</strong> button at the end of page.</strong></p>

</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)

    <div class="form-group" id="mytextarea">
        @Html.LabelFor(model => model.AndyTipsterTips, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.AndyTipsterTips, new { rows = "8", cols = "120" })
            @*@Html.EditorFor(model => model.AndyTipsterTips, new { htmlAttributes = new { @class = "form-control" } })*@
            @Html.ValidationMessageFor(model => model.AndyTipsterTips, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.IrishHorseTips, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.IrishHorseTips, new { rows = "8", cols = "120" })
            @*@Html.EditorFor(model => model.IrishHorseTips, new { htmlAttributes = new { @class = "form-control" } })*@
            @Html.ValidationMessageFor(model => model.IrishHorseTips, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.UltimateTips, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.UltimateTips, new { rows = "8", cols = "120" })
            @Html.ValidationMessageFor(model => model.UltimateTips, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
       <div class="col-md-10">           
           @Html.TextAreaFor(model => model.UltimateTips, new { rows = "8", cols = "120", name = "editor1", id = "editor1" })
            @Html.ValidationMessageFor(model => model.UltimateTips, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-primary btn-lg" />
        </div>
    </div>
</div>
}

